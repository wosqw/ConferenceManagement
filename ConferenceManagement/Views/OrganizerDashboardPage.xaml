<Page x:Class="ConferenceManagement.Views.OrganizerDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Кабинет организатора">
    <StackPanel Margin="16">
        <StackPanel Orientation="Horizontal" Spacing="12">
            <Image x:Name="Avatar" Width="96" Height="96"/>
            <StackPanel>
                <TextBlock x:Name="WelcomeText" Style="{StaticResource TitleTextBlockStyle}"/>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button Content="Профиль" Click="OnProfile" Width="140" Style="{StaticResource AccentButtonStyle}"/>
                    <Button Content="Активности" Click="OnActivities" Width="140" Style="{StaticResource AccentButtonStyle}"/>
                    <Button Content="Мероприятия" Click="OnEvents" Width="160" Style="{StaticResource AccentButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Page>