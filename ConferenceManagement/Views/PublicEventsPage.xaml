<Page x:Class="ConferenceManagement.Views.PublicEventsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      Title="Мероприятия">
    <DockPanel Margin="16">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,12">
            <TextBlock Text="Направление:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox x:Name="DirectionBox" Width="220" SelectionChanged="OnFilterChanged" Style="{StaticResource ComboBoxStyle}"/>
            <TextBlock Text="Дата:" Margin="16,0,8,0" VerticalAlignment="Center"/>
            <DatePicker x:Name="DateFrom" Width="160" SelectedDateChanged="OnFilterChanged"/>
            <TextBlock Text="—" Margin="8,0" VerticalAlignment="Center"/>
            <DatePicker x:Name="DateTo" Width="160" SelectedDateChanged="OnFilterChanged"/>
            <Button Content="К авторизации" Margin="16,0,0,0" Click="OnToLogin" Style="{StaticResource AccentButtonStyle}"/>
        </StackPanel>
        <ListView x:Name="EventsList" MouseDoubleClick="OnOpenDetails">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="8" Margin="0,0,0,8" BorderBrush="#DDD" BorderThickness="1">
                        <DockPanel>
                            <Image Width="64" Height="64" Margin="0,0,12,0">
                                <Image.Source>
                                    <BitmapImage x:Name="LogoImage"/>
                                </Image.Source>
                            </Image>
                            <StackPanel>
                                <TextBlock Text="{Binding EventName}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Cities.CityName}"/>
                                <TextBlock Text="{Binding EventDate, StringFormat=dd.MM.yyyy}"/>
                            </StackPanel>
                        </DockPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </DockPanel>
</Page>